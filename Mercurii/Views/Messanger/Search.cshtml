@model List<Model.DTO.UserDTO>
@{
    ViewBag.Title = "Search";
}

<style>
    .user-block img
    {
        max-height:100px;
        max-width:100px;
        margin:8px;
    }
    .user-block
    {
    margin-bottom: 10px;
    background-color: #3a3a3a;
    border: 1px solid #1a1a1a;
    border-radius: 5px;
    border-width: 1px 1px 3px 1px;
    padding: 10px;
    width:100%;
    height:130px;
    }
</style>

<div class="row">
    <div class="col-xs-0 col-md-2">

    </div>
    <div class="col-xs-12 col-md-8">
        <h2 class="text-success">Search results</h2>
        <p>
            Or you probably want to search someone else?
        </p>
        <p>
            <form class="form-inline">
                <div class="form-group">
                    <input type="email" class="form-control" id="email">
                </div>
                <button class="btn btn-success">Search <span class="glyphicon glyphicon-search"></span></button>
            </form>
            <br />
        </p>

        @foreach (var user in Model)
        {

            <div class="user-block">
                <div class="">
                    <div class="col-xs-4 col-md-2">
                        <img src="@user.ImgLink" class="img-circle" alt="" />
                    </div>
                    <div class="col-xs-8 col-md-10">
                        <h4>
                            @user.UserName
                        </h4>
                        <p>
                            <button class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Add To Friends</button>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-xs-0 col-md-2">

    </div>
</div>




